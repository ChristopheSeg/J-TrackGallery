<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin"  group="content" version="2.5" method="upgrade">
	<name>PLG_JTRACKGALLERY</name>
	<author>Christophe Seguinot</author>
	<creationDate>December 2015</creationDate>	<copyright>(C) 2010-2012 IGNF. All rights reserved.</copyright>
<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>christophe@jtrackgallery.net</authorEmail>
	<authorUrl>http://jtrackgallery.net/</authorUrl>
	<version>0.1</version>
	<description>PLG_JTRACKGALLERY_XML_DESCRIPTION</description>
		<files>
		<filename plugin="plg_jtrackgallery">plg_jtrackgallery.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_content_jtrackgallery.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_content_jtrackgallery.sys.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jtrackgallery.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jtrackgallery.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="key"
					type="input"
					class="text"
					size="20"
					default=""
					required="true"
					filter="string"
					description="PLG_JTRACKGALLERY_FIELD_KEY_DESC"
					label="PLG_JTRACKGALLERY_FIELD_KEY_LABEL" 
				>
				</field>
				<field name="width"
					type="input"
					class="text"
					size="4"
					default="500"
					description="PLG_JTRACKGALLERY_FIELD_WIDTH_DESC"
					label="PLG_JTRACKGALLERY_FIELD_WIDTH_LABEL" 
				>
				</field>
				<field name="height"
					type="input"
					class="text"
					size="4"
					default="500"
					description="PLG_JTRACKGALLERY_FIELD_HEIGHT_DESC"
					label="PLG_JTRACKGALLERY_FIELD_HEIGHT_LABEL" 
				>
				</field>
				<field name="longitude"
					type="input"
					class="text"
					size="10"
					default="2.731525"
					description="PLG_JTRACKGALLERY_FIELD_LON_DESC"
					label="PLG_JTRACKGALLERY_FIELD_LON_LABEL" 
				>
				</field>
				<field name="latitude"
					type="input"
					class="text"
					size="10"
					default="45.833333"
					description="PLG_JTRACKGALLERY_FIELD_LAT_DESC"
					label="PLG_JTRACKGALLERY_FIELD_LAT_LABEL" 
				>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
