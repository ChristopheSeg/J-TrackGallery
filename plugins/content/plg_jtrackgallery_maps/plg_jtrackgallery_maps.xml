<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin"  group="content" version="2.5" method="upgrade">
	<name>PLG_JTG_MAPS</name>
	<author>Christophe Seguinot</author>
	<creationDate>December 2015</creationDate>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>christophe@jtrackgallery.net</authorEmail>
	<authorUrl>http://jtrackgallery.net/</authorUrl>
	<version>0.1</version>
	<description>PLG_JTG_MAPS_XML_DESCRIPTION</description>
		<files>
		<filename plugin="plg_jtrackgallery_maps">plg_jtrackgallery_maps.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_content_jtrackgallery_maps.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_content_jtrackgallery_maps.sys.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jtrackgallery_maps.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jtrackgallery_maps.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="map_width"
					type="input"
					class="text"
					size="4"
					default="100%"
					description="PLG_JTG_MAPS_FIELD_WIDTH_DESC"
					label="PLG_JTG_MAPS_FIELD_WIDTH_LABEL" 
				>
				</field>
				<field name="map_height"
					type="input"
					class="text"
					size="4"
					default="300px"
					description="PLG_JTG_MAPS_FIELD_HEIGHT_DESC"
					label="PLG_JTG_MAPS_FIELD_HEIGHT_LABEL" 
				>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
